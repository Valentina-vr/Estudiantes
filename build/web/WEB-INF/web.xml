<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <servlet>
        <servlet-name>BorrarAutor</servlet-name>
        <servlet-class>controller.BorrarAutor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificarAutor</servlet-name>
        <servlet-class>controller.ModificarAutor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificarLibro</servlet-name>
        <servlet-class>controller.ModificarLibro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BorrarLibro</servlet-name>
        <servlet-class>controller.BorrarLibro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Consultar</servlet-name>
        <servlet-class>controller.Consultar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MuestraAutor</servlet-name>
        <servlet-class>controller.MuestraAutor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MuestraLibro</servlet-name>
        <servlet-class>controller.MuestraLibro</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LosLibros</servlet-name>
        <servlet-class>controller.LosLibros</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistraAutor</servlet-name>
        <servlet-class>controller.RegistraAutor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistraLibro</servlet-name>
        <servlet-class>controller.RegistraLibro</servlet-class>
    </servlet>
    
    
    <servlet-mapping>
        <servlet-name>BorrarAutor</servlet-name>
        <url-pattern>/BorrarAutor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificarAutor</servlet-name>
        <url-pattern>/ModificarAutor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificarLibro</servlet-name>
        <url-pattern>/ModificarLibro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BorrarLibro</servlet-name>
        <url-pattern>/BorrarLibro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LosLibros</servlet-name>
        <url-pattern>/LosLibros</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Consultar</servlet-name>
        <url-pattern>/Consultar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MuestraAutor</servlet-name>
        <url-pattern>/MuestraAutor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MuestraLibro</servlet-name>
        <url-pattern>/MuestraLibro</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistraAutor</servlet-name>
        <url-pattern>/RegistraAutor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistraLibro</servlet-name>
        <url-pattern>/RegistraLibro</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
